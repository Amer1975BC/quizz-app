# Development Dockerfile with testing capabilities
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including Node.js for frontend testing
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        build-essential \
        curl \
        postgresql-client \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better Docker layer caching
COPY requirements.txt requirements-test.txt /app/

# Install Python dependencies
RUN pip install --no-cache-dir -r /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements-test.txt

# Copy application code
COPY . /app

# Run tests during build (optional - uncomment to fail build on test failure)
# RUN python -m pytest test_api.py -v

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/ || exit 1

# Default command
CMD ["uvicorn", "webapi:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]